<form class="newUser formBox">
	<h3>Sign Up!</h3>
	<table>
		<tr>
			<td>
				<label for="user_username">Username:</label>
			</td>
			<td>
				<input type="text"
					name="user[username]" 
					id="user_username"
					required = "required" 
					autofocus = "autofocus">
			</td>
		</tr>
		<tr>
			<td>
				<label for="user_email">Email:</label>
			</td>
			<td>
				<input type="text" 
					name="user[email]" 
					pattern= "^.+@[a-zA-Z0-9.-]+\.[a-zA-Z]{2,4}$"
					required = "required"
					id="user_email">
			</td>
		</tr>
		<tr>
			<td>
				<label for="user_password">Password:</label>
			</td>
			<td>
				<input type="password" 
					name="user[password]" 
					required = "required"
					id="user_password">
			</td>
		</tr>
	</table>
	<input type="submit" value="Sign Up!">
	<br>
	<br>
	<p>Here before? <a id="swapForm" href="/#/">Sign in!</a></p>
</form>
